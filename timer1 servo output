#include "TimerOne.h"


volatile char statemachine = 0;


  pinMode(5, OUTPUT);
  pinMode(6, OUTPUT);
  pinMode(9, OUTPUT);
  pinMode(10, OUTPUT);

void setup()
{
  Timer1.initialize(1000);
  Timer1.attachInterrupt(timercallback);
}


void timercallback()
{
  switch (statemachine) {
    
  case 1:
    digitalWrite(10, LOW);
    digitalWrite(5, HIGH);
    Timer1.setPeriod(output_motor_left_front);
    statemachine = 2;
    break;
   
  case 2:
    digitalWrite(5, LOW);
    digitalWrite(6, HIGH);
    Timer1.setPeriod(output_motor_right_front);
    statemachine = 3;
    break;
    
  case 3:
    digitalWrite(6, LOW);
    digitalWrite(9, HIGH);
    Timer1.setPeriod(output_motor_left_back);
    statemachine = 4;
    break;
    
  case 4:
    digitalWrite(9, LOW);
    digitalWrite(10, HIGH);
    Timer1.setPeriod(output_motor_right_back);
    statemachine = 1;
    break;
    
     
  }
}
